<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoji.bakingapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleTop"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.RecipeActivity"
            android:parentActivityName="com.example.shoji.bakingapp.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.bakingapp.ui.MainActivity" />
        </activity>
        <activity android:name=".ui.RecipeIngredientActivity"
            android:parentActivityName="com.example.shoji.bakingapp.ui.RecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.bakingapp.ui.RecipeActivity" />
        </activity>
        <activity android:name=".ui.RecipeStepActivity"
            android:parentActivityName="com.example.shoji.bakingapp.ui.RecipeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.shoji.bakingapp.ui.RecipeActivity" />
        </activity>

        <receiver android:name=".media.BakerPlayer$MediaReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <provider
            android:name=".provider.generated.RecipeProvider"
            android:authorities="com.example.shoji.bakingapp.provider.provider"
            android:exported="false" />

    </application>

</manifest>