<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/navbutton_recipe_guideline"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/navbutton_recipe_previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nav_button_previous"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/navbutton_recipe_step_button_text_size"
        app:layout_constraintEnd_toStartOf="@+id/navbutton_recipe_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/navbutton_recipe_step_button_margin"/>

    <TextView
        android:id="@+id/navbutton_recipe_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/nav_button_next"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/navbutton_recipe_step_button_text_size"
        app:layout_constraintStart_toStartOf="@+id/navbutton_recipe_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/navbutton_recipe_step_button_margin"/>

</android.support.constraint.ConstraintLayout>